    "playwright": "^1.50.0",
    "typescript": "^5.4.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@noble/curves": "^1.9.7",
    "libsodium-wrappers-sumo": "^0.7.13",
    "pako": "^2.1.0"
